@inherits LayoutComponentBase
@using MudBlazor

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0" Color="Color.Primary">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudText Variant="Variant.h4" Style="font-weight: bold; color: white;">SegundoCerebro</MudText>
        <MudSpacer />
    </MudAppBar>
    
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader Style="background: var(--mud-palette-primary); color: white; text-align: center; padding: 24px 16px;">
            <MudText Variant="Variant.h6" Style="font-weight: bold; margin: 0;">Navigation</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}